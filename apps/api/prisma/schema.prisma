generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MeterTelemetryHistory {
  id             BigInt   @id @default(autoincrement())
  meterId        String
  kwhConsumedAc  Decimal  @db.Decimal(18, 6)
  voltage        Decimal  @db.Decimal(10, 3)
  timestamp      DateTime
  ingestedAt     DateTime @default(now())

  @@index([meterId, timestamp])
  @@index([timestamp])
}

model VehicleTelemetryHistory {
  id             BigInt   @id @default(autoincrement())
  vehicleId      String
  soc            Int
  kwhDeliveredDc Decimal  @db.Decimal(18, 6)
  batteryTemp    Decimal  @db.Decimal(10, 3)
  timestamp      DateTime
  ingestedAt     DateTime @default(now())

  @@index([vehicleId, timestamp])
  @@index([timestamp])
}

model LiveMeterStatus {
  meterId        String   @id
  kwhConsumedAc  Decimal  @db.Decimal(18, 6)
  voltage        Decimal  @db.Decimal(10, 3)
  timestamp      DateTime
  updatedAt      DateTime @updatedAt
}

model LiveVehicleStatus {
  vehicleId      String   @id
  soc            Int
  kwhDeliveredDc Decimal  @db.Decimal(18, 6)
  batteryTemp    Decimal  @db.Decimal(10, 3)
  timestamp      DateTime
  updatedAt      DateTime @updatedAt
}
